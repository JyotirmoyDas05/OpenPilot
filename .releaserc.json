{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    ["@semantic-release/commit-analyzer", {"preset": "conventionalcommits"}],
    ["@semantic-release/release-notes-generator", {"preset": "conventionalcommits"}],
    ["@semantic-release/changelog", {"changelogFile": "CHANGELOG.md"}],
    ["@semantic-release/npm", {"pkgRoot": "npm", "tarballDir": "npm/dist"}],
    ["@semantic-release/github", {"assets": ["npm/dist/*.tgz", "dist/**"]}],
    ["@semantic-release/git", {"assets": ["CHANGELOG.md", "npm/package.json"], "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"}]
  ]
}
